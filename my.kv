<MyGrid>:

    email:email
    context:context
    GridLayout:
        cols:1
        size: root.width -200 , root.height -200
        pos: 100,100

        GridLayout:
            cols:2

            Label:
                text:"Enter The Sender Email: "
            TextInput:
                id:email
                multiline:False
            
            Label:
                text:"Enter The The Content"
            TextInput:
                id:context
                multiline:False

        Button:
            text:"Send"



<p>:
    Label:
        text:"Your Email Has Been Sended"
        size_hint : 0.6, 0.2 
        pos_hint : {"x":0.2, "top":1}

    Label:
        text:"Press Anywhere Out Of This PopUp Window\n To Close This Window"
        size_hint : 0.6, 0.2 
        pos_hint : {"x":0.2, "top":0.3}